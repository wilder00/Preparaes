@model Pregunta

<h2>Insertar Pregunta</h2>
@Html.ValidationSummary()

@using (Html.BeginForm())
{
    

<div class="form-group">
    <label>Pregunta:</label>
    <input type="text" class="form-control" asp-for="PreguntaString" />
</div>
<div class="form-group">
    <label>Respuesta Correcta:</label>
    @Html.TextAreaFor(m => m.RptaCorrecta,4,4, new{@class = "form-control"})
</div>

<div class="form-group">
    <label>Respuestas incorrecta 1:</label>
    @Html.TextAreaFor(m => m.RptaIncorrecta1,4,4, new{@class = "form-control"})
</div>

<div class="form-group">
    <label>Respuestas incorrecta 2:</label>
    @Html.TextAreaFor(m => m.RptaIncorrecta2,4,4, new{@class = "form-control"})
</div>

<div class="form-group">
    <label>Tipo:</label>
    <input type="text" class="form-control" asp-for="Tipo" />
    <small class="">es para agrupar por tipo de Pregunta</small>
</div>

<div class="form-group">
    <label>Sesion:</label>
    <select class="form-control" asp-for="SesionId" asp-items="ViewBag.Sesiones"></select>
           
</div>

<button type="submit">Registrar</button>

}